cssowl-sprite-width(width)
  width: width

cssowl-sprite-height(height)
  height: height

cssowl-sprite-size(width, height)
  @include cssowl-sprite-width(width)
  @include cssowl-sprite-height(height)

cssowl-sprite-image(src)
  background-image: src

cssowl-sprite-position(x, y)
  background-position: x y

// --- display --------------------------------------------------------------------------------
cssowl-sprite-display(x, y, width, height, src)
  @include cssowl-sprite-image(src)
  @include cssowl-sprite-position(x, y)
  @include cssowl-sprite-size(width, height)

cssowl-sprite-display-block(x, y, width, height, src)
  display: block
  @include cssowl-sprite-display(x, y, width, height, src)

cssowl-sprite-display-inline(x, y, width, height, src)
  display: inline-block
  @include cssowl-sprite-display(x, y, width, height, src)

cssowl-sprite-display-offset(x, y, width, height, xOffset=0, yOffset=0)
  @include cssowl-sprite-position((x + xOffset), (y + yOffset))
  @include cssowl-sprite-size((width + xOffset * 2), (height + xOffset * 2))

// --- replace --------------------------------------------------------------------------------
cssowl-sprite-replace(x, y, width, height, src)
  text-indent: -9999px
  @include cssowl-sprite-display(x, y, width, height, src)

cssowl-sprite-replace-block(x, y, width, height, src)
  display: block
  @include cssowl-sprite-replace(x, y, width, height, src)

cssowl-sprite-replace-inline(x, y, width, height, src)
  display: inline-block
  @include cssowl-sprite-replace(x, y, width, height, src)

// --- float --------------------------------------------------------------------------------
cssowl-sprite-float-before(x, y, width, height, src, xOffset=0, yOffset=0)
  &:before
    content: ""
    float: left
    margin-top: yOffset
    margin-right: xOffset
    @include cssowl-sprite-display(x, y, width, height, src)


cssowl-sprite-float-after(x, y, width, height, src, xOffset=0, yOffset=0)
  &:after
    content: ""
    float: right
    margin-top: yOffset
    margin-left: xOffset
    @include cssowl-sprite-display(x, y, width, height, src)


// --- absolute ---------------------------------------------------------------------------------
cssowl-sprite-absolute-before(x, y, width, height, src)
  position: relative
  &:before
    content: ""
    position: absolute
    @include cssowl-sprite-display(x, y, width, height, src)


cssowl-sprite-absolute-after(x, y, width, height, src)
  position: relative
  &:after
    content: ""
    position: absolute
    @include cssowl-sprite-display(x, y, width, height, src)


// --- inside ---------------------------------------------------------------------------------
cssowl-sprite-inside-top-left(x, y, width, height, src, xOffset=0, yOffset=0)
  padding-top: (height + yOffset)
  padding-left: (width + xOffset)
  @include cssowl-sprite-absolute-after(x, y, width, height, src)
  &:after
    top: yOffset
    left: xOffset


cssowl-sprite-inside-top-center(x, y, width, height, src, xOffset=0, yOffset=0)
  padding-top: (height + yOffset)
  @include cssowl-sprite-absolute-after(x, y, width, height, src)
  &:after
    left: 50%
    top: yOffset
    margin-left: round(xOffset - width / 2)


cssowl-sprite-inside-top-right(x, y, width, height, src, xOffset=0, yOffset=0)
  padding-top: (height + yOffset)
  padding-right: (width + xOffset)
  @include cssowl-sprite-absolute-after(x, y, width, height, src)
  &:after
